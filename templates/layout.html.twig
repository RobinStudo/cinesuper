{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-primary bg-primary">
            <a class="navbar-brand" href="{{ path('home') }}">Cine super</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    {% if app.user %}
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
                            {{ app.user.fullname }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-key mr-2"></i>
                                Modification de mot de passe
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="{{ path('dashboard') }}" class="dropdown-item">
                                <i class="fas fa-user mr-2"></i>
                                Mon compte
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="{{ path('logout') }}" class="dropdown-item">
                                <i class="fas fa-arrow-circle-left mr-2"></i>
                                Déconnexion
                            </a>
                        </div>
                    </li>
                    {% else %}            
                    <li class="nav-item">
                        <a href="{{ path('login') }}" class="nav-link">Connexion</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>

    <main>
        {% for label, messages in  app.flashes(['info', 'danger', 'success'])  %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message | raw }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block content %}{% endblock %}
    </main>

    <footer>
        CineSuper - Tous droits réservés
    </footer>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
